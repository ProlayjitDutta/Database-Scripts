CREATE TABLE TRACKER_REQUISITION_MATERIAL
(
	material_requisition_id serial NOT NULL,
	issue_min_date date NOT NULL,
	issue_max_date date NOT NULL,
	transaction_id varchar(100) NOT NULL,
	delivery_min_date date NOT NULL,
	delivery_max_date date NOT NULL,
	category_name text NOT NULL,
	style_code varchar(50) NOT NULL,
	designer_code varchar(20) NOT NULL,
	color_code varchar(10) NOT NULL,
	product_codes varchar(500) NOT NULL,
	item_code varchar(50) NOT NULL,
	production_types varchar(200) NOT NULL,
	material_code varchar(50),
	material_type varchar(20) NOT NULL,
	material_colour varchar(20),
	material_total_quantity int NOT NULL,
	total_amount float NOT NULL,
	sample_reference varchar(20),
	sc_planning_main_item_id int NOT NULL,
	style_ccode_id int NOT NULL,
	sc_asis_plan_material_item_id int NOT NULL,
	sc_custom_plan_material_item_id int,
	sc_custom_dept_plan_material_item_id int,
	custom char(1) NOT NULL,
	dept_changed char(1) NOT NULL,
	approved char(1),
	PRIMARY KEY (material_requisition_id)
) WITHOUT OIDS;
